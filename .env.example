# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# MailerLite Configuration
MAILERLITE_API_KEY=your_mailerlite_api_key
FROM_EMAIL=noreply@repmotivatedseller.org

# Email Recipients
ADMIN_EMAIL=admin@repmotivatedseller.org
URGENT_EMAIL=urgent@repmotivatedseller.org
MANAGER_EMAIL=manager@repmotivatedseller.org

# Site Configuration
SITE_URL=https://your-domain.com

# CRM Integration Configuration
CRM_TYPE=hubspot
# Options: hubspot, salesforce, pipedrive, custom

# HubSpot Configuration (if using HubSpot)
HUBSPOT_API_KEY=your_hubspot_api_key
HUBSPOT_OWNER_ID=your_hubspot_owner_id

# Salesforce Configuration (if using Salesforce)
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_salesforce_security_token

# Pipedrive Configuration (if using Pipedrive)
PIPEDRIVE_API_KEY=your_pipedrive_api_key
PIPEDRIVE_COMPANY_DOMAIN=your_company_domain

# Custom CRM Configuration (if using custom CRM)
CUSTOM_CRM_URL=https://your-crm-api.com/webhook
CUSTOM_CRM_API_KEY=your_custom_crm_api_key

# Stripe Configuration (if using payments)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# AI Call Answering Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/api/voice

# OpenAI Configuration for Conversational AI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Google Cloud Speech-to-Text and Text-to-Speech (Alternative)
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_CLOUD_CREDENTIALS=your_google_cloud_credentials_json

# AI Call Settings
AI_CALL_TIMEOUT_SECONDS=300
AI_MAX_CONVERSATION_TURNS=20
AI_HANDOFF_KEYWORDS=agent,human,representative,speak to someone

# Additional Notification Settings
ENABLE_SMS_NOTIFICATIONS=false
TWILIO_SMS_PHONE_NUMBER=+1234567890

# Slack Integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook